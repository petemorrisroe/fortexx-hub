{
  "platform": {
    "apiRuntime": "python:3.10"
  },
  "routes": [
    {
      "route": "/",
      "rewrite": "/"
    },
    {
      "route": "/graphql",
      "rewrite": "/api/graphql"
    },
    {
      "route": "/api/*",
      "rewrite": "/api/:splat"
    }
  ],
  "navigationFallback": {
    "rewrite": "/",
    "exclude": ["/api/*", "/graphql", "/static/*"]
  },
  "mimeTypes": {
    ".html": "text/html",
    ".css": "text/css",
    ".js": "text/javascript",
    ".json": "application/json"
  }
}

